<Window x:Class="SmartMillService.Dmitriev.Ivan.Test.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMillService.Dmitriev.Ivan.Test.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Поле"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True"
                                    Width="200"/>

                <DataGridTextColumn Header="Значение"
                                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>

                <DataGridTextColumn Header="Комментарий"
                                    IsReadOnly="True"
                                    Width="*"
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
